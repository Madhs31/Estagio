<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Clientes</title>

    <!-- Bulma CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">

  <style>
    .status-box {
      padding: 8px 12px;
      border-radius: 6px;
      color: white;
      font-weight: bold;
      text-align: center;
    }
    .verde {
      background-color: #2e7d32; /* verde */
    }
    .amarelo {
      background-color: #f9a825; /* amarelo */
      color: black;
    }
    .vermelho {
      background-color: #c62828; /* vermelho */
    }
    .buttons form {
      display: inline;
    }

    .section {
      background-color: #2c2c2c;
      padding: 4rem 2rem;
      min-height: 100vh;
      display: flex;
    }

    .section-title {
      text-align: center;
      margin-bottom: 3rem;
    }

    .section-title h2 {
      font-size: 3rem;
      color: white;
      text-shadow: 2px 2px 0 #000;
    }
  </style>
</head>
<body style="background:#1a1a1a; color:white;">
  <section class="section">
    <div class="container">
      <h1 class="title has-text-white">Lista de Clientes</h1>

      <div style="margin-bottom: 20px;">
        <a href="/clients/new" class="button is-primary">Adicionar Cliente</a>
      </div>

      <table class="table is-fullwidth is-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Horas Contratadas</th>
            <th>Horas Usadas</th>
            <th>Status</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% clients.forEach(cliente => { 
              const percentual = (cliente.Horas_trabalhadas / cliente.Linha_de_base) * 100;
              let classe = "verde";
              if (percentual >= 75) classe = "vermelho";
              else if (percentual >= 50) classe = "amarelo";
          %>
            <tr>
              <td><%= cliente.Cliente %></td>
              <td><%= cliente.Linha_de_base %></td>
              <td><%= cliente.Horas_trabalhadas %></td>
              <td>
                <div class="status-box <%= classe %>">
                  <% if (percentual < 50) { %>
                    Menos da metade usado ✅
                  <% } else if (percentual < 75) { %>
                    Passou de 50% ⚠️
                  <% } else { %>
                    Próximo do vencimento ❌
                  <% } %>
                </div>
              </td>
              <td class="buttons">
                <a href="/clients/edit/<%= cliente.id %>" class="button is-warning is-small">Editar</a>
                <form action="/clients/delete/<%= cliente.id %>" method="POST" onsubmit="return confirm('Deseja realmente excluir este cliente?');">
                  <button type="submit" class="button is-danger is-small">Excluir</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>
</body>
</html>
