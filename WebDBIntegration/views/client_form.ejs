<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Formulário Cliente</title>

  <!-- Bulma CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Fonte Montserrat -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #1a1a1a, #2b3236);
      color: white;
      font-family: 'Montserrat', sans-serif;
    }

    .section {
      padding: 4rem 2rem;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .container {
      background-color: rgba(43, 50, 54, 0.95);
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
      padding: 2.5rem;
      width: 100%;
      max-width: 600px;
    }

    .title {
      text-align: center;
      margin-bottom: 2rem;
      font-size: 2.2rem;
      color: white;
    }

    .box {
      background-color: rgba(255, 255, 255, 0.03);
      border-radius: 8px;
      padding: 2rem;
    }

    .label {
      color: #ddd;
    }

    .input {
      background-color: #1f1f1f;
      color: white;
      border: 1px solid #444;
    }

    .button.is-success {
      background-color: #a5c3d1;
      border: none;
    }

    .button.is-success:hover {
      background-color: #637780;
    }

    .button.is-back {
      background-color: #a5c3d1;
      border: none;
      color: white;
    }

    .button.is-back:hover {
      background-color: #637780;
    }

    .button.is-light {
      background-color: #444;
      color: white;
      border: none;
    }

    .button.is-light:hover {
      background-color: #666;
    }

    .field.has-text-centered {
      text-align: center;
      margin-top: 1.5rem;
    }
  </style>
</head>

<body>
  <section class="section">
    <div class="container">
      <a href="/" class="button is-back">
        <i class="fa fa-chevron-left"></i>&nbsp; Voltar
      </a>
      <h1 class="title"><%= titulo %></h1>

      <form action="<%= client ? '/clients/edit/' + client.id : '/clients/new' %>" method="POST" class="box">

        <div class="field">
          <label class="label">Cliente</label>
          <div class="control">
            <input class="input" type="text" name="Cliente" value="<%= client ? client.Cliente : '' %>" required>
          </div>
        </div>

        <div class="field">
          <label class="label">Código</label>
          <div class="control">
            <input class="input" type="text" name="Codigo" value="<%= client ? client.Codigo : '' %>">
          </div>
        </div>

        <div class="field">
          <label class="label">Data de Início</label>
          <div class="control">
            <input class="input" type="date" name="Data_de_Inicio"
              value="<%= client && client.Data_de_Inicio ? client.Data_de_Inicio.toISOString().split('T')[0] : '' %>">
          </div>
        </div>

        <div class="field">
          <label class="label">Data de Fim</label>
          <div class="control">
            <input class="input" type="date" name="Data_de_Fim"
              value="<%= client && client.Data_de_Fim ? client.Data_de_Fim.toISOString().split('T')[0] : '' %>">
          </div>
        </div>

        <div class="field">
          <label class="label">Linha de Base (horas)</label>
          <div class="control">
            <input class="input" type="number" name="Linha_de_base" value="<%= client ? client.Linha_de_base : '' %>" required>
          </div>
        </div>

        <!-- Campo de Horas Trabalhadas REMOVIDO -->

        <div class="field has-text-centered">
          <button class="button is-success" type="submit">
            <i class="fas fa-save"></i>&nbsp; Salvar
          </button>
          <a href="/clients" class="button is-light">
            <i class="fas fa-times"></i>&nbsp; Cancelar
          </a>
        </div>
      </form>
    </div>
  </section>
</body>
</html>
